<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="650dp"
            android:layout_height="310dp"
            app:srcCompat="@drawable/backpork"
            android:id="@+id/imageView2"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="650dp"
            android:background="@drawable/backgroundlogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="269dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            android:padding="100px">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="97dp"
                app:srcCompat="@drawable/logo"
                android:id="@+id/imageView5"
                android:layout_margin="50px" />

        <TextView
                android:text="Créer un compte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:fontFamily="@font/poppins"
                android:textColor="@android:color/system_neutral1_800"
                android:letterSpacing="0.2"
                android:textAlignment="center" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="76dp">

            <EditText
                    android:layout_width="151dp"
                    android:layout_height="60dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editTextTextEmailAddress4"
                    android:background="@drawable/backgroundtext"
                    android:layout_margin="30px"
                    android:text="Nom"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/darker_gray"
                    android:paddingLeft="80px" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editTextTextEmailAddress"
                    android:background="@drawable/backgroundtext"
                    android:layout_margin="30px"
                    android:text="Prénom"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="1"
                    android:paddingLeft="80px" />
        </LinearLayout>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editTextTextEmailAddress5"
                android:background="@drawable/backgroundtext"
                android:layout_margin="30px"
                android:text="Adresse email"
                android:textAlignment="textStart"
                android:textColor="@android:color/darker_gray"
                android:paddingLeft="80px" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editTextTextEmailAddress2"
                android:background="@drawable/backgroundtext"
                android:layout_margin="30px"
                android:text="Numéro téléphone"
                android:textAlignment="textStart"
                android:textColor="@android:color/darker_gray"
                android:paddingLeft="80px" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextTextPassword"
                android:background="@drawable/backgroundtext"
                android:layout_margin="30px" />

        <Button
                android:text="S'inscrire"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:id="@+id/button"
                android:layout_margin="30px"
                android:background="@drawable/backbouton"
                android:includeFontPadding="crimson"
                android:fontFamily="@font/crimson_text"
                android:textColor="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>