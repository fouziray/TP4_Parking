<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyReservations"
        android:id="@+id/frameLayout2">

    <!-- TODO: Update blank fragment layout -->

    <TextView
            android:layout_width="124dp"
            android:layout_height="24dp"
            android:text="mes réservations"
            android:background="@drawable/rectangledroit"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/poppins"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintVertical_bias="0.069" />

    <Button
            android:text="se déconnecter"
            android:layout_width="202dp"
            android:layout_height="54dp"
            android:id="@+id/deconnecter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/rect"
            android:backgroundTint="#E66565"
            android:fontFamily="@font/poppins"
            android:fontFeatureSettings="w"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.051" />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="427dp"
            android:layout_height="520dp"
            android:id="@+id/recyclerReservations"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/deconnecter"
            android:layout_marginTop="72dp" />

    <Switch
            android:text="today Only"
            android:layout_width="133dp"
            android:layout_height="58dp"
            android:id="@+id/switch1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/recyclerReservations"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>