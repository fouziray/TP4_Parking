<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:background="@drawable/locationbar"

        android:gravity="center"

        android:orientation="horizontal"
        android:padding="10dp">


    <LinearLayout

            android:id="@+id/linearLayout"

            android:layout_width="257dp"

            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:divider="@android:drawable/divider_horizontal_bright">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:gravity="clip_horizontal|center_vertical"
                android:showDividers="middle">

            <TextView

                    android:layout_width="58dp"

                    android:layout_height="wrap_content"

                    android:paddingTop="@dimen/offset_triple_dot"

                    android:text="ouvert"

                    android:textStyle="bold"
                    android:background="@drawable/ouvertrectangledetail"
                    android:gravity="center"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/etatdetailmap" />

            <TextView

                    android:id="@+id/tauxdetailmap"

                    android:layout_width="35dp"

                    android:layout_height="wrap_content"

                    android:text="3%"
                    android:background="@drawable/cadrevidevert"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="@font/poppins" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/distancedetailmap"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/cadrevidevert"
                    android:text="20 km"
                    android:gravity="center"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="@font/poppins" />

            <TextView
                    android:layout_width="58dp"
                    android:layout_height="27dp"
                    android:id="@+id/dureedetailmap"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/cadrevidevert"
                    android:text="20 min"
                    android:gravity="center"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="@font/poppins" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/options"
                    android:id="@+id/imageView9"
                    android:layout_weight="1" />
        </LinearLayout>

        <TextView
                android:text="Parking gare de train"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:id="@+id/nomparkdetailmap1"
                android:textColor="@android:color/background_light"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textSize="18sp" />

        <TextView
                android:text="Oued smar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nomparkdetailmap"
                android:textColor="@android:color/secondary_text_light_nodisable"
                android:fontFamily="@font/poppins" />


    </LinearLayout>

</LinearLayout>